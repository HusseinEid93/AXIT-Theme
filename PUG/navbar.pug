nav(class="navigation text-white position-sticky")
   div.custom-container.h-100
      div(class="row align-items-center justify-content-between h-100 w-100 mx-0 px-0")
         .brand 
            img(
               src="../images/img1.png"
               class="img-fluid"
            )
         .nav-list 
            div(class="close-btn position-absolute d-md-none d-block")
               i(class="fas fa-times fa-1x")
            ul(class="list-unstyled mb-0 mt-md-0 mt-5 pl-4 pl-md-0")
               - const listItems = ["features", "about", "pricing", "reviews", "contact"];
               - for(let i = 0; i < listItems.length; i++)
                  li 
                     a(
                        href=`#${listItems[i]}`
                        class="text-decoration-none font-weight-bold text-capitalize position-relative"
                     ) #{listItems[i]}
            
         div(class="toggle d-md-none")
            - for(let i = 1; i <= 3; i++)
               div.bg-white
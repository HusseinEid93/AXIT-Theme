      )
         +SVG("top", 1614384729)
         .custom-container 
            +header("what our customers are saying", "Lorem ipsum dolor sit amet, consectetur adipiscing elit.")
            main 
               // First customer 
               +customer("Jeremy H.", "Manager", 7)
               // Second customer 
               +customer("John S.", "Freelancer", 8)
               // Third customer
               +customer("Susan W.", "Photographer", 9)



      // Start .stylish-exure-design
      section.stylish-exure-design
         .custom-container 
            +header("stylish axure design", "Use the sections you need, remove the ones you don't. Create gorgeous prototypes faster than ever!")
            button(class="py-2 px-5 text-white d-block mx-auto") Download 


      
      // Start the .contact-us section 
      section(class="contact-us target" id="contact")
         .custom-container 
            +header("contact us", "Lorem ipsum dolor sit amet, consectetur adipiscing elit.")
            form(
               class="mt-5" 
               onsubmit="event.preventDefault()"
            )
               .form-container 
                  .name-email-subject
                     - const inputPlaceholders = ["Name", "Email", "Subject"]; 
                     - for(let i = 0; i < 3; i++)
                        input(
                           type=`${i === 1 ? "email": "text"}`
                           placeholder=`${inputPlaceholders[i]}`
                           class="w-100 py-1 px-2"
                           required
                        )
                  .message
                     textarea(
                        rows="5"
                        class="w-100 h-100 pl-2 pr-3 py-1"
                        placeholder="Message"
                     )  

               input(
                  type="submit"
                  value="Send Message"
                  class="d-block mx-auto mt-5 text-white border-0"
               )      



      // Start the footer 
      footer.text-white.position-relative.text-center
         +SVG("top", 1614384976)
         .custom-container 
            .icons.mx-auto
               +socialMedia
            .small.text-center.mt-3.

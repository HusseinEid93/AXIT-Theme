      )
         +SVG("top", 1614384264)
         .custom-container 
            +header("pricing options", "Lorem ipsum dolor sit amet, consectetur adipiscing elit.")
            main 
               // First list
               +pricingCard("Basic", 0, "Free for Life", ["1 gb of space", "10 gb of bandwidth", "3 websites", "basic customization", "wordpress integration", "email support"])
               
               // Second list
               +pricingCard("Professional", 19, "Monthly Payment", ["5 gb of space", "50 gb of bandwidth", "12 websites", "advanced customization", "wordpress integration", "email support"])

               // Third list 
               +pricingCard("Enterprise", 70, "Monthly Payment", ["unlimited space", "unlimited bandwidth", "100 websites", "advanced customization", "wordpress integration", "24/7 customer support"])



      // Start the .testimonials section 

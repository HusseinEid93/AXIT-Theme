                     main(class="pt-4 pb-5 bg-white")
                        - const types = ["text", "email", "password"];
                        - const placeholders = ["Name", "Email", "Password"];
                        - for(let i = 0; i <= 2; i++)
                           input(
                              type=`${types[i]}`
                              class="pb-1 pl-2 w-100"
                              placeholder=`${placeholders[i]}`
                           )

                     input(
                        type="submit"
                        class="footer border-0 text-white w-100 text-capitalize text-center"
                        value="Get Started"
                        onclick="event.preventDefault()"
                     )


